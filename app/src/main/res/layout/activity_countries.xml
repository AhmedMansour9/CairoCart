<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222222"
    tools:context=".Activities.Countries">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <ImageView
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_55sdp"
        android:src="@drawable/logo_splash"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_20sdp"
        android:id="@+id/logo_login"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo_login"
        android:text="@string/selectlanguage"
        android:textColor="#fff"
        android:id="@+id/select"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:textSize="@dimen/_15sdp"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/select"
            android:layout_marginTop="@dimen/_20sdp"
            android:id="@+id/Rela_Arabic"
            android:onClick="Arabic"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_height="@dimen/_40sdp">
            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:id="@+id/img_arabic"
                android:src="@drawable/ic_arabic"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/arabic"
                android:textColor="#fff"
                android:layout_toEndOf="@+id/img_arabic"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_20sdp"
                android:textSize="@dimen/_15sdp"/>

            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_true"
                android:visibility="gone"
                android:id="@+id/ImgTrue_Arabic"
                android:layout_marginEnd="@dimen/_20sdp"
                />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/Rela_Arabic"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:id="@+id/Rela_English"
            android:onClick="English"
            android:layout_height="@dimen/_40sdp">
            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_40sdp"
                android:id="@+id/img_english"
                android:src="@drawable/ic_english"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/english"
                android:textColor="#fff"
                android:layout_toEndOf="@+id/img_english"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_20sdp"
                android:textSize="@dimen/_15sdp"/>

            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_true"
                android:visibility="gone"
                android:id="@+id/ImgTrue_English"
                android:layout_marginEnd="@dimen/_20sdp"
                />





        </RelativeLayout>


        <View
    android:layout_width="match_parent"
    android:layout_height="@dimen/_2sdp"
    android:background="#ffffff"
    android:id="@+id/view"
    android:layout_below="@+id/Rela_English"
    android:layout_marginTop="@dimen/_20sdp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:text="@string/selectcountry"
        android:textColor="#fff"
        android:id="@+id/select_con"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:textSize="@dimen/_15sdp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/select_con"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:id="@+id/Rela_Saudi"
        android:onClick="Saudi"
        android:layout_height="@dimen/_40sdp">
        <ImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:id="@+id/img_saudi"
            android:src="@drawable/ic_saudi"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/saudi"
            android:textColor="#fff"
            android:layout_toEndOf="@+id/img_saudi"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_20sdp"
            android:textSize="@dimen/_15sdp"/>

        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_true"
            android:visibility="gone"
            android:id="@+id/ImgTrue_Saudi"
            android:layout_marginEnd="@dimen/_20sdp"
            />





    </RelativeLayout>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/Rela_Saudi"
        android:layout_marginTop="@dimen/_20sdp"
        android:id="@+id/Rela_Emarat"
        android:onClick="Emarat"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_height="@dimen/_40sdp">
        <ImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:id="@+id/img_emarat"
            android:src="@drawable/ic_emrate"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/emara"
            android:textColor="#fff"
            android:layout_toEndOf="@+id/img_emarat"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_20sdp"
            android:textSize="@dimen/_15sdp"/>

        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_true"
            android:visibility="gone"
            android:id="@+id/ImgTrue_Emarat"
            android:layout_marginEnd="@dimen/_20sdp"
            />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/Rela_Emarat"
        android:layout_marginTop="@dimen/_20sdp"
        android:id="@+id/Rela_Kewait"
        android:onClick="Kewait"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_height="@dimen/_40sdp">
        <ImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:id="@+id/img_kewait"
            android:src="@drawable/ic_kewait"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/kewait"
            android:textColor="#fff"
            android:layout_toEndOf="@+id/img_kewait"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_20sdp"
            android:textSize="@dimen/_15sdp"/>

        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_true"
            android:visibility="gone"
            android:id="@+id/ImgTrue_Kewait"
            android:layout_marginEnd="@dimen/_20sdp"
            />


    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/Rela_Kewait"
        android:layout_marginTop="@dimen/_20sdp"
        android:id="@+id/Rela_Egypt"
        android:onClick="Egypt"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_height="@dimen/_40sdp">
        <ImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:id="@+id/img_egypt"
            android:src="@drawable/ic_egypt"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/egypt"
            android:textColor="#fff"
            android:layout_toEndOf="@+id/img_egypt"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_20sdp"
            android:textSize="@dimen/_15sdp"/>

        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_true"
            android:visibility="gone"
            android:id="@+id/ImgTrue_Egypt"
            android:layout_marginEnd="@dimen/_20sdp"
            />


    </RelativeLayout>


        <Button
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_35sdp"
            android:id="@+id/Btn_login"
            android:text="@string/done"
            android:textStyle="bold"
            android:textColor="#fff"
            android:onClick="Next"

            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_below="@+id/Rela_Egypt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/bc_buttons"
            />

    </RelativeLayout>

</ScrollView>