<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_marginTop="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_15sdp"
    app:cardElevation="1dp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:layout_marginStart="@dimen/_5sdp"
    android:layout_marginEnd="@dimen/_5sdp"
    android:layout_height="@dimen/_180sdp">

    <RelativeLayout
        android:layout_width="@dimen/_145sdp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_limited"
            android:layout_width="@dimen/_32sdp"
            android:visibility="gone"
            android:layout_height="@dimen/_35sdp"
            android:orientation="vertical">

            <TextView
                android:textColor="#fff"
                android:textSize="10sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/limit"
                android:id="@+id/vertical_text_view_name"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_35sdp"
            android:visibility="gone"
            android:id="@+id/Rela_Offer"
            android:background="@drawable/bc_txtoffer"
           >
            <TextView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:id="@+id/off"
                android:layout_marginTop="@dimen/_5sdp"
                android:textStyle="bold"
                android:paddingStart="@dimen/_5sdp"
                android:text="@string/off"
                android:textColor="#fff"
                android:textSize="@dimen/_8sdp" />
            <TextView
                android:id="@+id/T_Offer"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/off"
                android:gravity="center"
                android:textStyle="bold"
                android:paddingStart="@dimen/_5sdp"
                android:textColor="#fff"
                android:textSize="@dimen/_8sdp" />


        </RelativeLayout>


        <ImageView
            android:id="@+id/Img_Product"
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_height="@dimen/_80sdp"
            />




        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:id="@+id/Rela_title"
            android:layout_below="@+id/Img_Product"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:layout_marginTop="@dimen/_4sdp"
                android:id="@+id/Title"
                android:text="namee"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:layout_marginTop="@dimen/_4sdp"
                android:id="@+id/T_Unit"
                android:layout_toEndOf="@+id/Title"
                android:layout_marginStart="@dimen/_5sdp"
                android:text="namee"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="@dimen/_12sdp" />


        </RelativeLayout>






        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#777777"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_below="@+id/Rela_title"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:gravity="center"
            android:text="descrptionnn"

            android:id="@+id/T_Descrption"
            android:maxLines="2"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/_9sdp" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:id="@+id/Rela_review"
            android:layout_below="@+id/T_Descrption"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_height="wrap_content">





            <RatingBar
                android:id="@+id/RatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/ratingBarStyleSmall"
                android:theme="@style/AppThemeRatingBar"
                android:numStars="5"
                android:progressTint="#fad477"
                android:stepSize="0.5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#777777"
                android:gravity="center"
                android:layout_toEndOf="@+id/RatingBar"
                android:id="@+id/T_Reviees"
                android:maxLines="1"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/_9sdp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:id="@+id/Rela_Price"
            android:layout_below="@+id/Rela_review"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:layout_marginTop="@dimen/_2sdp"
                android:id="@+id/T_SalePrice"
                android:maxLines="1"
                android:text="1000"
                android:textSize="@dimen/_10sdp"
                android:ellipsize="end"
                android:layout_marginStart="@dimen/_5sdp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#7C7C7C"
                android:layout_marginTop="@dimen/_2sdp"
                android:id="@+id/T_TotalPrice"
                android:layout_toEndOf="@+id/T_SalePrice"
                android:maxLines="1"
                android:textSize="@dimen/_10sdp"
                android:ellipsize="end"
                android:layout_marginStart="@dimen/_5sdp"
                />
        </RelativeLayout>

        <ImageView
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            android:id="@+id/Img_Favourit"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_5sdp"
            />

        <ImageView
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:id="@+id/Img_Cartt"
            />


    </RelativeLayout>
</androidx.cardview.widget.CardView>