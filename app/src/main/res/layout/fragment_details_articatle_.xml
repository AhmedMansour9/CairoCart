<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f5f5f8"
    android:id="@+id/Constrain_detail">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/Scroll_Detail"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarDetails"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorPrimary"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/textView"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/logo_gzr"
                        android:textColor="#fff"
                        android:textSize="@dimen/_16sdp"
                        android:textStyle="bold"
                        />

                </RelativeLayout>

            </androidx.appcompat.widget.Toolbar>
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="#fff"
                android:layout_height="@dimen/_170sdp"
                android:id="@+id/Rela_Home"
                android:layout_below="@+id/toolbarDetails">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:id="@+id/Img_Detail"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="#fff"
                android:layout_height="@dimen/_50sdp"
                android:id="@+id/Rela_Title"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_below="@+id/Rela_Home">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:ellipsize="end"
                    android:layout_centerVertical="true"
                    android:maxLines="1"
                    android:textSize="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_80sdp"
                    android:id="@+id/T_title"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="#fff"
                android:layout_height="wrap_content"
                android:id="@+id/Rela_Descrption"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_below="@+id/Rela_Title">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/descrption"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_50sdp"
                    android:id="@+id/descrption"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/descrption"
                    android:layout_below="@+id/descrption"
                    android:textColor="#858484"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:id="@+id/T_Descrption"/>

            </RelativeLayout>




        </RelativeLayout>

    </ScrollView>

</RelativeLayout>



