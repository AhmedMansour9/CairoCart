<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".Activities.Countries">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:id="@+id/toolbarContact"
        android:background="#E9EBEE">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_25sdp"
                android:src="@drawable/logo"
                android:layout_marginStart="@dimen/_50sdp"
                android:layout_centerVertical="true"
                android:id="@+id/logo_login"
                />


        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_35sdp"
        android:layout_below="@+id/toolbarContact"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:id="@+id/Bc_Relative_Login">



            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/bs_spinner_search"
                android:hint="@string/fullname"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:textColorHint="#2B2B2B"
                android:inputType="text"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:id="@+id/E_Name"
                android:textColor="#2B2B2B"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/bs_spinner_search"
                android:hint="@string/email"
                android:layout_below="@+id/E_Name"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp"
                android:textColorHint="#2B2B2B"
                android:inputType="textEmailAddress"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:id="@+id/E_Email"
                android:textColor="#2B2B2B"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/bs_spinner_search"
                android:hint="@string/phone"
                android:paddingEnd="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_below="@+id/E_Email"
                android:textColorHint="#2B2B2B"
                android:inputType="number"
                android:id="@+id/E_Phone"
                android:paddingStart="@dimen/_10sdp"
                android:drawablePadding="@dimen/_10sdp"
                android:textColor="#2B2B2B"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_85sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/bs_spinner_search"
                android:hint="@string/message"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:paddingTop="@dimen/_5sdp"
                android:gravity="start"
                android:layout_below="@+id/E_Phone"
                android:textColorHint="#2B2B2B"
                android:id="@+id/E_Message"
                android:paddingStart="@dimen/_10sdp"
                android:drawablePadding="@dimen/_10sdp"
                android:textColor="#2B2B2B"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@+id/E_Message"
                android:background="@drawable/bc_roundedcorners"
                android:text="@string/sendmsg"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_40sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:textColor="#fff"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:id="@+id/SendMesg"
                />


        </RelativeLayout>
    </ScrollView>

    <ProgressBar
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_centerInParent="true"
        android:id="@+id/progross"
        android:visibility="gone"/>


</RelativeLayout>