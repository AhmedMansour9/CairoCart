<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.ConfirmOrder">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarOrders"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="?attr/actionBarTheme"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/textView"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/logo_gzr"
                android:textColor="#fff"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold"
                />

        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reciet"
        android:id="@+id/receit"
        android:layout_below="@+id/toolbarOrders"
        android:textColor="@color/orange"
        android:textStyle="bold"
        android:textSize="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_15sdp"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/receit"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:padding="@dimen/_5sdp"
        android:id="@+id/Card_Promo"
        app:cardCornerRadius="@dimen/_3sdp"
        app:cardElevation="@dimen/_2sdp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:textStyle="bold"
            android:textColor="#000"
            android:id="@+id/FullName"
            android:layout_height="wrap_content"
            android:text="@string/fullname"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:textStyle="bold"
                android:layout_toEndOf="@+id/T_DelivryPrice"
                android:textColor="@color/orange"
                android:id="@+id/T_FullName"
                android:layout_height="wrap_content"
                />


        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:textStyle="bold"
            android:textColor="#000"
            android:id="@+id/Phone"
            android:layout_below="@+id/FullName"
            android:layout_height="wrap_content"
            android:text="@string/phone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:textStyle="bold"
                android:layout_toEndOf="@+id/T_DelivryPrice"
                android:textColor="@color/orange"
                android:id="@+id/T_Phone"
                android:layout_below="@+id/FullName"
                android:layout_height="wrap_content"
               />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:textStyle="bold"
                android:textColor="#000"
                android:id="@+id/City"
                android:layout_below="@+id/Phone"
                android:layout_height="wrap_content"
                android:text="@string/city"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:textStyle="bold"
                android:layout_toEndOf="@+id/T_DelivryPrice"
                android:textColor="@color/orange"
                android:id="@+id/T_City"
                android:layout_below="@+id/Phone"
                android:layout_height="wrap_content"
                />
<!--            <TextView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_marginTop="@dimen/_10sdp"-->
<!--                android:layout_marginStart="@dimen/_10sdp"-->
<!--                android:textStyle="bold"-->
<!--                android:textColor="#000"-->
<!--                android:id="@+id/Delivry"-->
<!--                android:layout_below="@+id/T_City"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="@string/delivry_type"/>-->
<!--            <TextView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_marginTop="@dimen/_10sdp"-->
<!--                android:layout_marginStart="@dimen/_10sdp"-->
<!--                android:textStyle="bold"-->
<!--                android:layout_toEndOf="@+id/T_DelivryPrice"-->
<!--                android:textColor="#8E8E8E"-->
<!--                android:id="@+id/T_Delivry"-->
<!--                android:layout_below="@+id/T_City"-->
<!--                android:layout_height="wrap_content"-->
<!--                />-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:textStyle="bold"
                android:textColor="#000"
                android:id="@+id/T_DelivryPrice"
                android:layout_below="@+id/City"
                android:layout_height="wrap_content"
                android:text="@string/delivry_price"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:textStyle="bold"
                android:textColor="@color/orange"
                android:layout_toEndOf="@+id/T_DelivryPrice"
                android:id="@+id/DelivryPrice"
                android:layout_below="@+id/City"
                android:layout_height="wrap_content"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:textStyle="bold"
                android:textColor="#000"
                android:id="@+id/Street"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_below="@+id/T_DelivryPrice"
                android:layout_height="wrap_content"
                android:text="@string/total"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:textStyle="bold"
                android:textColor="@color/orange"
                android:layout_toEndOf="@+id/T_DelivryPrice"
                android:id="@+id/T_Total"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_below="@+id/T_DelivryPrice"
                android:layout_height="wrap_content"
                />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_Cart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/Btn_order"
        android:layout_below="@+id/Card_Promo"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:scrollbars="horizontal" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Btn_order"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:textColor="#fff"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/bc_checkout"
        android:text="@string/confirm"
        android:layout_alignParentBottom="true"
        tools:layout_editor_absoluteX="92dp" />



</RelativeLayout>