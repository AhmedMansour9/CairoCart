<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:layout_gravity="center"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="#fff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:id="@+id/toolbarProfile"
                android:background="#E9EBEE">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:src="@drawable/logo"
                        android:layout_marginStart="@dimen/_50sdp"
                        android:layout_centerVertical="true"
                        android:id="@+id/logo_login"
                        />



                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>





            <TextView
                android:id="@+id/fullname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/toolbarProfile"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="@string/fullname"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="@dimen/_13sdp"

                />
            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_name"
                android:layout_gravity="center"
                android:layout_below="@+id/fullname"
                android:background="#fff"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="6dp">


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:textColor="#000"
                    android:textColorHint="#000"
                    android:background="@null"
                    android:id="@+id/E_FullName"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingStart="@dimen/_10sdp"
                    />

            </androidx.cardview.widget.CardView>



            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_view_name"
                android:layout_marginStart="@dimen/_20sdp"
                android:text="@string/phone"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="@dimen/_13sdp"

                />
            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_phone"
                android:layout_gravity="center"
                android:layout_below="@+id/phone"
                android:background="#fff"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="6dp">


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:id="@+id/E_Phone"
                    android:background="@null"
                    android:textColor="#000"
                    android:textColorHint="#000"
                    android:layout_below="@+id/E_Email"
                    />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_view_phone"
                android:layout_marginStart="@dimen/_20sdp"
                android:text="@string/email"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="@dimen/_13sdp"

                />
            <androidx.cardview.widget.CardView
                android:id="@+id/card_view"
                android:layout_gravity="center"
                android:layout_below="@+id/email"
                android:background="#fff"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="6dp">


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:textColor="#000"
                    android:textColorHint="#000"
                    android:background="@null"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:id="@+id/E_Email"
                    />

            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_view"
                android:layout_marginStart="@dimen/_20sdp"
                android:text="@string/addres"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="@dimen/_13sdp"

                />
            <androidx.cardview.widget.CardView
                android:id="@+id/card_viewaddress"
                android:layout_gravity="center"
                android:layout_below="@+id/address"
                android:background="#fff"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="6dp">


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:textColor="#000"
                    android:textColorHint="#000"
                    android:background="@null"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:id="@+id/E_Address"
                    />

            </androidx.cardview.widget.CardView>



            <TextView
                android:id="@+id/password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_viewaddress"
                android:layout_marginStart="@dimen/_20sdp"
                android:text="@string/old_pass"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="@dimen/_13sdp"
                />
            <androidx.cardview.widget.CardView
                android:id="@+id/card_view2"
                android:layout_gravity="center"
                android:layout_below="@+id/password"
                android:background="#fff"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="6dp">


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_weight="1"
                    android:inputType="textPassword"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:id="@+id/E_OldPassword"
                    android:background="@null"
                    android:textColor="#000"
                    android:textColorHint="#000"
                    android:layout_below="@+id/E_Email"
                    />

            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/confirmpassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_view2"
                android:layout_marginStart="@dimen/_20sdp"
                android:text="@string/newpassword"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="@dimen/_13sdp"
                />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view5"
                android:layout_gravity="center"
                android:layout_below="@+id/confirmpassword"
                android:background="#fff"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="6dp">


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_weight="1"
                    android:inputType="textPassword"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:id="@+id/E_NewPassword"
                    android:background="@null"
                    android:textColor="#000"
                    android:textColorHint="#000"
                    android:layout_below="@+id/E_Email"
                    />

            </androidx.cardview.widget.CardView>


            <Button
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_35sdp"
                android:id="@+id/Btn_Edit"
                android:text="@string/edit"
                android:onClick="Btn_Register"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/_15sdp"
                android:textColor="#fff"
                android:layout_below="@+id/card_view5"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/bc_buttons"
                />

        </RelativeLayout>
    </ScrollView>
    <ProgressBar
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:id="@+id/progressBarRegister"
        android:visibility="gone"
        android:theme="@style/progressBarBlue"
        android:layout_centerInParent="true"/>

</RelativeLayout>