                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/_9sdp"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:textColor="#000"
                        android:layout_toEndOf="@+id/date"
                        android:textSize="@dimen/_12sdp"
                        />
                    <TextView
                        android:id="@+id/orderid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_toStartOf="@+id/T_order_id"
                        android:text="@string/orderid"
                        android:layout_marginTop="@dimen/_9sdp"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:textColor="#a11c46"
                        android:textSize="@dimen/_12sdp"
                        android:maxLines="1"/>
                    <TextView
                        android:id="@+id/T_order_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/_9sdp"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:textColor="#000"
                        android:textSize="@dimen/_12sdp"
                        android:maxLines="1"/>
                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="@string/price"
                        android:layout_below="@+id/T_date"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:textColor="#a11c46"
                        android:textSize="@dimen/_12sdp"
                        android:maxLines="1"
                        />
                    <TextView
                        android:id="@+id/T_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_toEndOf="@+id/price"
                        android:layout_below="@+id/T_date"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:textColor="#000"
                        android:textSize="@dimen/_12sdp"
                        android:maxLines="1"
                        />


                    <TextView
                        android:id="@+id/T_order_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_alignParentEnd="true"
                        android:layout_marginBottom="@dimen/_7sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:textColor="#fff"
                        android:background="@drawable/bc_orderstatus"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:textSize="@dimen/_12sdp"
                        android:layout_below="@+id/T_order_id"
                        />
