<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Riviews">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:id="@+id/toolbarhome"
        android:background="#E9EBEE">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_25sdp"
                android:src="@drawable/logo"
                android:layout_centerInParent="true"
                android:id="@+id/logo_login"
                />

        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>


    <TextView
        android:id="@+id/T_AllReviwes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbarhome"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp"

        android:textSize="@dimen/_13sdp"
        android:text="@string/reviews"
        android:textColor="#222222"
        />
    <TextView
        android:id="@+id/T_TotalCatrgories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbarhome"
        android:layout_marginTop="@dimen/_13sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_toEndOf="@+id/T_AllReviwes"
        android:textSize="@dimen/_9sdp"
        android:textColor="#95939d"
        />

    <TextView
        android:id="@+id/T_Leave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbarhome"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:text="@string/leave_review"
        android:layout_alignParentEnd="true"
        android:textColor="#000080"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_Addetional"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/T_AllReviwes"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:scrollbars="horizontal" />

</RelativeLayout>